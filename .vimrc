set nocompatible
execute pathogen#infect()
syntax on
colorscheme cobalt2
filetype plugin indent on
autocmd VimEnter * NERDTree
let g:NERDTreeMouseMode=3
set mouse=a
filetype plugin indent on
set number
set linespace=3
set ruler
set visualbell
set encoding=utf-8
set wrap
set textwidth=79
set formatoptions=tcqrn1
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set scrolloff=1
set backspace=indent,eol,start
set tabstop=4 
set softtabstop=4 
set shiftwidth=4
